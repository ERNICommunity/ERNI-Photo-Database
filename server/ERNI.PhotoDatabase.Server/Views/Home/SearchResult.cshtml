@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ERNI.PhotoDatabase.Server.Controllers.SearchResult[]
@{
    Layout= "_Layout";
    ViewData["Title"] = "Search Results";
}

<div class="row search-result">
    @foreach (var sr in Model)
    {
        <div class="col-sm-4">
            <div class="card">
                <a asp-controller="Detail" asp-action="Index" asp-route-id="@sr.Id">
                    <img class="card-img-top" src="@Url.Action("Thumbnail", "Photo", new { id = sr.Id })" alt="@sr.Name">
                </a>
                
                <div class="card-body">
                    <h4 class="card-title">@sr.Name</h4>
                    <p class="card-text tags">
                        @foreach (var tag in sr.Tags)
                        {
                            <a asp-controller="Home" asp-action="SearchResult" asp-route-query="@tag" class="badge badge-primary">
                                <i class="fa fa-tag" aria-hidden="true"></i> @tag
                            </a>
                        }
                    </p>
                    <a asp-controller="Tag" asp-action="Index" asp-route-fileIds="@sr.Id">
                        <i class="fa fa-tag" aria-hidden="true"></i> Edit tags
                    </a>
                </div>
            </div>
        </div>
    }
</div>




